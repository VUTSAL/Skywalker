<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurry1"
    tools:context=".frgCreateEvent">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etEventTitle"
            android:ems="10"
            android:background="@android:color/transparent"
            android:drawablePadding="12dp"
            android:padding="8dp"
            android:hint="Title"
            android:textColor="@color/white"
            android:textColorHint="@color/white"

            android:maxLines="1"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etShortDescription"
            android:textColor="@color/white"
            android:ems="10"
            android:background="@android:color/transparent"
            android:drawablePadding="12dp"
            android:padding="8dp"
            android:hint="Short Description"
            android:textColorHint="@color/white"

            android:maxLines="1"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            android:lines="5"
            android:scrollbars="vertical"
            android:id="@+id/etLocation"
            android:ems="10"
            android:background="@drawable/edittextborderall"
            android:drawablePadding="12dp"
            android:padding="8dp"
            android:hint="Address,city,state,zipcode"


            android:textColorHint="@color/white"
            android:maxLines="1"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            android:lines="12"
            android:scrollbars="vertical"
            android:id="@+id/etAgenda"
            android:ems="10"
            android:background="@drawable/edittextborderall"
            android:drawablePadding="12dp"
            android:padding="8dp"
            android:hint="Agenda"
            android:textColorHint="@color/white"
            android:maxLines="1"

            />

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:text="From"
                android:textColor="@color/white"
                />
                <DatePicker
                    android:id="@+id/dpFromDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    ></DatePicker>
            <TimePicker
                android:id="@+id/tpFromTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:timePickerMode="spinner"
                ></TimePicker>
            <!--<EditText-->
                <!--android:id="@+id/etFromDate"-->
                <!--android:layout_weight="2"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:ems="10"-->
                <!--android:inputType="date" />-->
            <!--<EditText-->
                <!--android:id="@+id/etFromTime"-->
                <!--android:layout_weight="2"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:ems="10"-->
                <!--android:inputType="time" />-->


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To"

                android:textColor="@color/white"
                />
            <DatePicker
                android:id="@+id/dpToDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                ></DatePicker>
            <TimePicker
                android:id="@+id/tpToTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:timePickerMode="spinner"
                ></TimePicker>
            <!--<EditText-->
                <!--android:id="@+id/etToDate"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:ems="10"-->
                <!--android:layout_weight="2"-->
                <!--android:inputType="date" />-->
            <!--<EditText-->
                <!--android:id="@+id/etToTime"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:ems="10"-->
                <!--android:layout_weight="2"-->
                <!--android:inputType="time" />-->

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <ImageView

            android:src="@drawable/placeholder"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:clickable="true"
            android:id="@+id/ivEventPhoto"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/login_button"
            android:clickable="true"
            android:padding="16dp"
            android:text="C R E A T E"
            android:textAllCaps="false"
            android:textColor="#354e66"
            android:textSize="18sp"
          android:id="@+id/btnCreateEvent"
            android:textAlignment="center"
                    />

    </LinearLayout>
    </ScrollView>




</FrameLayout>