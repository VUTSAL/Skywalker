<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"

    >
<TextView
    android:id="@+id/txtEventTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Event Title"
    android:textSize="20sp"

    />
    <TextView
        android:id="@+id/txtEventShortDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Party in vegas filled with casino nights,clubs and magic shows"
        android:textSize="20sp"

        />
    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Las Vegas"
        android:textSize="20sp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="6pm"
            android:textSize="20sp"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView


            android:id="@+id/imgUser1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/roundimage"
            />
        <ImageView


            android:id="@+id/imgUser2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/roundimage"
            />
        <ImageView


            android:id="@+id/imgUser3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/roundimage"
            />
        <TextView
            android:id="@+id/txtMemberCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="0 Members"
            android:textSize="20sp"


            />

    </LinearLayout>
</LinearLayout>